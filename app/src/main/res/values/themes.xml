<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MUSICPLAYER" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/sky_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MyBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/gray</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="curved">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>

    </style>

<!--    for nowPlaying layout-->
    <style name="softCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>

    </style>



<!--    bottomsheet-->
    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>

    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_background</item>

    </style>


</resources>