<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Search_Fragment">

    <SearchView
        android:id="@+id/searchmusic"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:queryHint="Search any music.."
        android:background="@drawable/backgroundd"
        android:iconifiedByDefault="false"
        android:searchIcon="@drawable/baseline_search_24"
        android:textColor="@color/white_smoke"
        android:textColorHint="@color/white_smoke"
        android:tint="@color/white_smoke" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_below="@id/searchmusic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>

